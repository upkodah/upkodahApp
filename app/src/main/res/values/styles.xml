<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SelectLocationDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 검색창 스타일 -->
    <style name="SearchTextLight">
        <item name="android:textColor">#0B006E</item>
        <item name="android:backgroundTint">#000000</item>
    </style>
    <style name="SearchTextDark">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#EEEEEE</item>
    </style>

    <!-- 텍스트 스타일 -->
    <style name="TitleText">
        <item name="android:textColor">#0B006E</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="ContentText">
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="DiscriptionText">
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 편의시설태그 스타일 -->
    <style name="BaseFacilitiesBtn">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
</resources>