<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="model"
            type="com.uos.upkodah.viewmodel.UkdMainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/app_name_txt_view"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:gravity="left|center_vertical"
            android:text="UpKoDah"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/total_input_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:divider="@drawable/layout_divider"
            android:foregroundTint="#FFFFFF"
            android:orientation="vertical"
            android:overScrollMode="ifContentScrolls"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:showDividers="middle"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_name_txt_view">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragment_search_destination"
                    android:name="com.uos.upkodah.user.fragment.SearchBarFragment"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:tag="@string/fragment_search_destination"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/get_my_location_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/get_my_location_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="#00FFFFFF"
                    android:onClick="@{model.onClickGetMyLocationBtn}"
                    android:scaleType="fitXY"
                    android:src="@drawable/my_location"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/get_location_btn"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/get_location_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="#00FFFFFF"
                    android:onClick="@{model.onClickGetLocatoinBtn}"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_location"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_limit_time_option"
                android:name="com.uos.upkodah.user.fragment.SearchOptionFragment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:tag="@string/fragment_limit_time" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_estate_type_option"
                android:name="com.uos.upkodah.user.fragment.SearchOptionFragment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:tag="@string/fragment_estate_type" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_trade_type_option"
                android:name="com.uos.upkodah.user.fragment.SearchOptionFragment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:tag="@string/fragment_trade_type" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/ukd_main_facilities"
                android:name="com.uos.upkodah.user.fragment.FacilitiesFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:layout="@layout/fragment_facilities" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>